value List a = {
  variant Empty = { };
  
  variant NonEmpty = {
    data = {
      head :: a;
      tail :: List a;
    }
  };
};

cons x xs = val NonEmpty { head = x, tail = xs };

empty = val Empty {};

list = cons 42 | cons 17 | cons (-3) | cons 20 empty;

length list = {
  var result = 0;
  var iter = list;
  var empty = false;

  while not empty {
    match iter {
      NonEmpty { tail: xs } => {
        result += 1;
        iter = xs;
      }
      Empty { } => { empty := true; }
    }
  }

  return result;
};

main = length list;